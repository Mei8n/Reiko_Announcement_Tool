<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReikoAnnouncementTool" parent="android:Theme.Light">
        <item name="android:windowNoTitle" >true</item >
        <item name="android:fontFamily">@font/rodin</item>

        <item name="colorPrimary">@color/white_bar</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/default_background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ReikoAnnouncementTool.Fullscreen" parent="Theme.ReikoAnnouncementTool">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

</resources>